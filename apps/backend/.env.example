# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5437/custom_gift_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=custom-gift-management-system
JWT_AUDIENCE=custom-gift-management-users

# Server Configuration
PORT=3001
NODE_ENV=development

# Email Configuration (for document sending)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads

# Company Default Settings
DEFAULT_COMPANY_NAME=Your Company Name
DEFAULT_COMPANY_EMAIL=info@yourcompany.com
DEFAULT_COMPANY_PHONE=+1-555-0123