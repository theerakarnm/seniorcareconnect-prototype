{
  "name": "backend",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "dev:services": "docker-compose -f ../docker-compose.dev.yml up -d",
    "dev:services:stop": "docker-compose -f ../docker-compose.dev.yml down",
    "dev:services:logs": "docker-compose -f ../docker-compose.dev.yml logs -f",
    "redis:cli": "docker exec -it custom-gift-redis redis-cli",
    "test:redis": "bun run src/test-redis.ts",
    "validate:setup": "bun run src/validate-setup.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:setup": "bun run scripts/setup-database.ts",
    "db:seed": "bun run scripts/seed-database.ts",
    "db:validate": "bun run scripts/validate-schema.ts"
  },
  "dependencies": {
    "@clerk/backend": "^2.16.0",
    "@hono/clerk-auth": "^3.0.3",
    "@hono/zod-validator": "^0.7.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/redis": "^4.0.11",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.9",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.9.4",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "redis": "^5.8.2",
    "uuidv7": "^1.0.2",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.5"
  }
}